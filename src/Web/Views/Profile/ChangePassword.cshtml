@using Web.Resources
@model global::Common.DTOs.User.Request.UserChangePasswordModel;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = @Common.ChangePassword;
}

<form method="post">
    <div>
        <label>@Common.OldPassword</label>
        <input type="Password" class="form-control" placeholder="@Common.OldPassword" asp-for="OldPassword">
        <span asp-validation-for="OldPassword" class="text-danger"></span>
    </div>
    <div>
        <label>@Common.NewPassword</label>
        <input type="Password" class="form-control" placeholder="@Common.NewPassword" asp-for="NewPassword">
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>
    <div>
        <input type="submit" value="@Common.ChangePassword" class="btn btn-primary" />
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}